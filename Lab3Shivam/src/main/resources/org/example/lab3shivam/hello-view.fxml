<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="org.example.lab3shivam.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane prefHeight="310.0" prefWidth="659.0">
        <children>
            <TextField fx:id="emailField" layoutX="162.0" layoutY="44.0" promptText="Email" />
            <PasswordField fx:id="passwordField" layoutX="163.0" layoutY="96.0" promptText="Password" />
            <Label layoutX="64.0" layoutY="48.0" text="Email:" />
            <Label layoutX="64.0" layoutY="100.0" text="Password:" />
            <Button layoutX="64.0" layoutY="155.0" onAction="#onHelloButtonClick" text="Login" />
            <!-- Error message label -->
            <Label fx:id="errorMessage" layoutX="64.0" layoutY="190.0" textFill="red" />
        </children>
    </AnchorPane>
</VBox>
