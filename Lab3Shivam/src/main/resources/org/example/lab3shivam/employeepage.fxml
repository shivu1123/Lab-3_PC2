<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.lab3shivam.Employeecontroller">
    <children>
        <AnchorPane prefHeight="242.0" prefWidth="508.0">
            <children>
                <TableView layoutX="124.0" layoutY="21.0" prefHeight="200.0" prefWidth="326.0" fx:id="tableView">
                    <columns>
                        <TableColumn fx:id="EmployeeID" prefWidth="75.0" text="EmployeeID" />
                        <TableColumn fx:id="Name" prefWidth="75.0" text="Name" />
                        <TableColumn fx:id="Address" prefWidth="75.0" text="Address" />
                        <TableColumn fx:id="Salary" prefWidth="75.0" text="Salary" />
                    </columns>
                </TableView>

                <TextField layoutX="14.0" layoutY="240.0" prefWidth="100.0" fx:id="employeeIdField" promptText="Employee ID" />
                <TextField layoutX="14.0" layoutY="280.0" prefWidth="100.0" fx:id="nameField" promptText="Name" />
                <TextField layoutX="14.0" layoutY="320.0" prefWidth="100.0" fx:id="addressField" promptText="Address" />
                <TextField layoutX="14.0" layoutY="360.0" prefWidth="100.0" fx:id="salaryField" promptText="Monthly Salary" />

                <Button layoutX="150.0" layoutY="240.0" mnemonicParsing="false" text="Insert" onAction="#handleInsert" />
                <Button layoutX="150.0" layoutY="280.0" mnemonicParsing="false" text="Delete" onAction="#handleDelete" />
                <Button layoutX="150.0" layoutY="320.0" mnemonicParsing="false" text="Update" onAction="#handleUpdate" />
                <Button layoutX="150.0" layoutY="360.0" mnemonicParsing="false" text="Load" onAction="#handleLoad" />
                <Button layoutX="150.0" layoutY="400.0" mnemonicParsing="false" text="Fetch" onAction="#handleFetch" />

                <Button layoutX="14.0" layoutY="21.0" mnemonicParsing="false" text="Back" onAction="#backbutton" />
            </children>
        </AnchorPane>
    </children>
</VBox>
